
@{
    Layout = null;
}

@{
    GülBlogMVC5.Models.GulBlogMVC5Entities db = new GülBlogMVC5.Models.GulBlogMVC5Entities();

    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();

    var contactdata = db.TBLCONTACT.FirstOrDefault();

    ViewBag.social = new
    {
        contactdata?.LINKEDIN,
        contactdata?.GITHUB,
        contactdata?.TWITTER,
        contactdata?.INSTAGRAM
    };

    ViewBag.aboutus = new
    {
        contactdata?.ABOUTUS
    };
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Gül Blog | @ViewBag.Title</title>
    <link rel="icon" href="~/Thema/img/Fevicon.png" type="image/png">

    <link rel="stylesheet" href="~/Thema/vendors/bootstrap/bootstrap.min.css">
    <link rel="stylesheet" href="~/Thema/vendors/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="~/Thema/vendors/themify-icons/themify-icons.css">
    <link rel="stylesheet" href="~/Thema/vendors/linericon/style.css">
    <link rel="stylesheet" href="~/Thema/vendors/owl-carousel/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/Thema/vendors/owl-carousel/owl.carousel.min.css">

    <link rel="stylesheet" href="~/Thema/css/style.css">
</head>
<body>
    <!--================Header Menu Area =================-->
    <header class="header_area">
        <div class="main_menu">
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="container box_1620">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <a style="font-size:1.7rem;" class="navbar-brand logo_h" href="@Url.RouteUrl("Home")">Gül Blog</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <!-- Collect the nav links, forms, and other content for toggling -->


                    <div class="collapse navbar-collapse offset" id="navbarSupportedContent">
                        <ul class="nav navbar-nav menu_nav justify-content-center">
                            <li class="nav-item @(currentController == "Home" && currentAction == "Index" ? "active" : "")">
                                <a class="nav-link" href="@Url.RouteUrl("Home")">Anasayfa</a>
                            </li>
                            <li class="nav-item @(currentController == "Blogs" && currentAction == "Index" ? "active" : "")">
                                <a class="nav-link" href="@Url.RouteUrl("Blogs")">Bloglarım</a>
                            </li>
                            <li class="nav-item @(currentController == "Contact" && currentAction == "Index" ? "active" : "")">
                                <a class="nav-link" href="@Url.RouteUrl("Contact")">İletişim</a>
                            </li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right navbar-social">
                            <li><a href="@ViewBag.social.GITHUB"><i class="ti-github"></i></a></li>
                            <li><a href="@ViewBag.social.TWITTER"><i class="ti-twitter-alt"></i></a></li>
                            <li><a href="@ViewBag.social.INSTAGRAM"><i class="ti-instagram"></i></a></li>
                            <li><a href="@ViewBag.social.LINKEDIN"><i class="ti-linkedin"></i></a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <!--================Header Menu Area =================-->

    @RenderBody()

    <!--================ Start Footer Area =================-->
    <footer class="footer-area section-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-6  col-md-6 col-sm-6">
                    <div class="single-footer-widget">
                        <h6>About Us</h6>
                        <p>
                            @ViewBag.aboutus.ABOUTUS
                        </p>
                    </div>
                </div>
                <div class="col-lg-4  col-md-6 col-sm-6">
                    <div class="single-footer-widget">
                        <h6>Haber Bülteni</h6>
                        <p>
                            En son gelişmelerimizden haberdar olun
                        </p>
                        <div class="" id="mc_embed_signup">

                            <form target="_blank" action="" method="get" class="form-inline">

                                <div class="d-flex flex-row">

                                    <input class="form-control" name="EMAIL" placeholder="Enter Email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter Email '"
                                           required="" type="email">


                                    <button class="click-btn btn btn-default"><span class="lnr lnr-arrow-right"></span></button>
                                    <div style="position: absolute; left: -5000px;">
                                        <input name="b_36c4fd991d266f23781ded980_aefe40901a" tabindex="-1" value="" type="text">
                                    </div>
                                </div>
                                <div class="info"></div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 col-md-6 col-sm-6">
                    <div class="single-footer-widget">
                        <h6>Bizi Takip Et</h6>
                        <p>Sosyal Medyalarımız</p>
                        <div class="footer-social d-flex align-items-center">
                            <a href="@ViewBag.social.GITHUB">
                                <i class="fab fa-github-alt"></i>
                            </a>
                            <a href="@ViewBag.social.TWITTER">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a href="@ViewBag.social.INSTAGRAM">
                                <i class="fab fa-instagram"></i>
                            </a>
                            <a href="@ViewBag.social.LINKEDIN">
                                <i class="fab fa-linkedin"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="footer-bottom d-flex justify-content-center align-items-center flex-wrap">
                <p class="footer-text m-0">
                    &copy;
                    <script>document.write(new Date().getFullYear());</script> Site Backend tarafını kodlayan kişi by <a href="https://furkangul.dev/" target="_blank">Furkan Gül</a>
                </p>
            </div>
        </div>
    </footer>
    <!--================ End Footer Area =================-->

    <script src="~/Thema/vendors/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/Thema/vendors/bootstrap/bootstrap.bundle.min.js"></script>
    <script src="~/Thema/vendors/owl-carousel/owl.carousel.min.js"></script>
    <script src="~/Thema/js/jquery.ajaxchimp.min.js"></script>
    <script src="~/Thema/js/mail-script.js"></script>
    <script src="~/Thema/js/main.js"></script>
</body>
</html>
